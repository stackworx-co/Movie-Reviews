<div class="container-fluid">
  <h1>Top Rated Movies</h1>
  <div class="row">
    <% @movies.each do |movie| %>
      <div class="col-md-3 col-sm-6 col-lg-3 movie-image-style">
        <%= link_to (image_tag movie.avatar.url(:medium), height: '430', width: '350'), movie %>
      </div>
    <% end %>
  </div>
  <br>
</div>
