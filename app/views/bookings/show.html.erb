
<div class="panel panel-default">
  <div class="panel-body">
    <div class="container">
      <div class="row">
        <div class="col-md-4">
          <%= link_to "DOWNLOAD PDF", movie_booking_path(@movie, @booking, format: :pdf), :class=> "btn btn-primary" %><br><br>
          <%= image_tag @movie.avatar.url(:medium) %>
          <div class="table-responsive">
            <table class="table">
              <tbody>
              <tr>
                <td><strong>Title:</strong></td>
                <td><%= @movie.title %></td>
              </tr>
              <tr>
                <td><strong>Description:</strong></td>
                <td><%= @movie.description %></td>
              </tr>
              <tr>
                <td><strong>Movie length:</strong></td>
                <td><%= @movie.movie_length %></td>
              </tr>
              <tr>
                <td><strong>Director:</strong></td>
                <td><%= @movie.director %></td>
              </tr>
              <tr>
                <td><strong>Actors:</strong></td>
                <td><%= @movie.actros %></td>
              </tr>
              <tr>
                <td><strong>Genre:</strong></td>
                <td><%= @movie.genre  %></td>
              </tr>
              <tr>
                <td><strong>User:</strong></td>
                <td><%= @movie.user.full_name %></td>
              </tr>
              </tbody>
            </table>

          </div>
        </div>

        </div>
      </div>
      <%= link_to 'Edit Movie!', edit_movie_path(@movie) %> |
      <%= link_to 'Back to Home Page', movies_path %>
    </div>
  </div>
</div>
